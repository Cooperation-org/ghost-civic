{{!-- OAuth Login Additions for Ghost signin.hbs --}}
{{!-- Add this to your Ghost theme's signin.hbs or create a partial --}}

<div class="oauth-login-section">
    <div class="divider">
        <span>Or continue with</span>
    </div>

    <div class="oauth-buttons">
        {{!-- Google OAuth --}}
        <a href="/members/api/oauth/google/init" class="oauth-button oauth-google">
            <svg class="oauth-icon" viewBox="0 0 24 24" width="20" height="20">
                <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
                <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
                <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
                <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
            </svg>
            <span>Continue with Google</span>
        </a>

        {{!-- ATProto/Bluesky OAuth --}}
        <div class="oauth-atproto">
            <form class="atproto-form" action="/members/api/oauth/atproto/init" method="POST">
                <div class="atproto-input-group">
                    <input 
                        type="text" 
                        name="handle" 
                        class="atproto-handle-input"
                        placeholder="yourhandle.bsky.social" 
                        required
                        pattern="[a-zA-Z0-9._-]+\.bsky\.social|[a-zA-Z0-9._-]+\.[a-zA-Z0-9._-]+"
                        title="Enter your Bluesky handle (e.g., username.bsky.social)"
                    >
                    <button type="submit" class="oauth-button oauth-atproto">
                        <svg class="oauth-icon" viewBox="0 0 24 24" width="20" height="20">
                            <path fill="#00A8E8" d="M12 2C6.477 2 2 6.477 2 12s4.477 10 10 10 10-4.477 10-10S17.523 2 12 2zm4.89 6.27c.31.31.53.68.65 1.08.13.4.18.83.18 1.27 0 .44-.05.87-.18 1.27-.12.41-.34.77-.65 1.08l-2.14 2.14c-.31.31-.68.53-1.08.65-.4.13-.83.18-1.27.18-.44 0-.87-.05-1.27-.18-.41-.12-.77-.34-1.08-.65l-2.14-2.14c-.31-.31-.53-.68-.65-1.08-.13-.4-.18-.83-.18-1.27 0-.44.05-.87.18-1.27.12-.41.34-.77.65-1.08l2.14-2.14c.31-.31.68-.53 1.08-.65.4-.13.83-.18 1.27-.18.44 0 .87.05 1.27.18.41.12.77.34 1.08.65l2.14 2.14z"/>
                        </svg>
                        <span>Continue with Bluesky</span>
                    </button>
                </div>
            </form>
        </div>
    </div>

    {{!-- Error messages --}}
    {{#if error}}
        <div class="oauth-error">
            {{#match error "oauth_failed"}}
                <p>OAuth login failed. Please try again.</p>
            {{/match}}
            {{#match error "google_auth_failed"}}
                <p>Google login failed. Please try again.</p>
            {{/match}}
            {{#match error "handle_required"}}
                <p>Please enter your Bluesky handle.</p>
            {{/match}}
        </div>
    {{/if}}
</div>

<style>
.oauth-login-section {
    margin-top: 2rem;
    padding-top: 2rem;
    border-top: 1px solid #e5e7eb;
}

.divider {
    text-align: center;
    margin-bottom: 1.5rem;
    position: relative;
}

.divider span {
    background: white;
    padding: 0 1rem;
    color: #6b7280;
    font-size: 0.875rem;
}

.oauth-buttons {
    display: flex;
    flex-direction: column;
    gap: 1rem;
}

.oauth-button {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0.75rem 1rem;
    border: 1px solid #d1d5db;
    border-radius: 0.5rem;
    background: white;
    color: #374151;
    text-decoration: none;
    transition: all 0.2s;
    font-weight: 500;
}

.oauth-button:hover {
    background: #f9fafb;
    border-color: #9ca3af;
}

.oauth-icon {
    margin-right: 0.5rem;
}

.atproto-form {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
}

.atproto-input-group {
    display: flex;
    gap: 0.5rem;
}

.atproto-handle-input {
    flex: 1;
    padding: 0.75rem;
    border: 1px solid #d1d5db;
    border-radius: 0.5rem;
    font-size: 0.875rem;
}

.atproto-handle-input:focus {
    outline: none;
    border-color: #00A8E8;
    box-shadow: 0 0 0 3px rgba(0, 168, 232, 0.1);
}

.oauth-atproto {
    white-space: nowrap;
}

.oauth-error {
    margin-top: 1rem;
    padding: 0.75rem;
    background: #fee2e2;
    border: 1px solid #fecaca;
    border-radius: 0.5rem;
    color: #dc2626;
    font-size: 0.875rem;
}

@media (min-width: 640px) {
    .atproto-input-group {
        flex-direction: row;
    }
}

@media (max-width: 639px) {
    .atproto-input-group {
        flex-direction: column;
    }
    
    .oauth-atproto {
        width: 100%;
    }
}
</style>
